@model  BizSparkSupport.MVC.Areas.Admin.ViewModels.CatgeroyView

@{
    ViewBag.Title = "CAtegoryDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("EditCategory", "Admin"))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <h4>Category</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.CategoryID)
                    <div class="form-group">
                        <label>Category Name</label>
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Category Admin</label>
                        @Html.EditorFor(model => model.CategoryAdmin, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Category Description</label>
                        @*@Html.EditorFor(model => model.CategoryDescription, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.TextAreaFor(model => model.CategoryDescription, 5, 55, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Save Changes</button>
            }
            <br />
            <br />

            <section>
                <div class="page-section third">
                    <!-- Tabbable Widget -->
                    <div class="tabbable paper-shadow relative" data-z="0.5">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#Cases" data-toggle="tab">Employees</a></li>
                            <li><a href="#History" data-toggle="tab">Cases</a></li>

                        </ul>
                        <div class="tab-content" style="margin-top: 10px;">
                            <div class="tab-pane fade in active col-md-12" id="Cases">
                                @Html.Action("CategoryEmployee", "Admin", new { id = Model.CategoryID })
                            </div>
                            <div class="tab-pane fade col-md-12" id="History">
                                @Html.Action("CategoryCases", "Admin", new { id = Model.CategoryID })
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

