@model IEnumerable<BizSparkSupport.MVC.Areas.Admin.ViewModels.EmployeeCasesVM>
@{
    ViewBag.Title = "AllEmployees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>All Employees</h2>
    <div class="row">
        <div class="col-md-12">
            <table id="example" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Employee Name</th>
                        <th>UserName</th>
                        <th>Employee Email</th>
                        <th>Employee Mobile</th>
                        <th>Joined</th>
                        <th>No. of Cases</th>
                    </tr>
                </thead>
                @{
                    int counter = 0;
                }
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @{counter = counter + 1;}
                                @Html.DisplayName((counter).ToString())
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.User.FirstName) @Html.DisplayFor(modelItem => item.Employee.User.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.User.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.User.Mobile)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.User.CreatedAt)
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.CasesNumber)*@
                                @Html.ActionLink(Convert.ToString(item.CasesNumber), "EmployeeCases", "CategoryAdmin", new { empId = item.Employee.EmployeeID }, null)
                            </td>
                        </tr>
                                    }
                </tbody>
            </table>
        </div>
        @*<div class="col-md-3">
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
                    <li><a href="@Url.Action("Requests", "Admin")">Requests</a></li>
                    <li class="active"><a href="@Url.Action("Categories", "Admin")">Categories</a></li>
                </ul>
            </div>*@
    </div>
    <div class="btn-group">
        @Html.ActionLink("Back to Dashboard", "CategoryAdminDashboard", "CategoryAdmin", null, new { @class = "btn btn-primary" })
    </div>
</div>