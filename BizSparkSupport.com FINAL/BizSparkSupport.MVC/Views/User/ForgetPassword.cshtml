
@{
    ViewBag.Title = "ForgetPasswd";
}

<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("ForgetPassword", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-7">
                                @Html.Editor("email", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-7">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </div>
                    </fieldset>
                </div>
            }
            @if (ViewBag.ErrorMessage != null)
            {
                <h5 class="text-danger"> @ViewBag.ErrorMessage </h5>
            }
        </div>
    </div>
</div>

