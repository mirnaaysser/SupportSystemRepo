@model BizSparkSupport.DAL.User

@{
    ViewBag.Title = "Login";
}

<div class="container" style="margin-top: 20px;">

    <div class="row">
        <div class="col-md-6">
            @if (ViewBag.Error != null)
            {
                <h5 class="text-danger">@ViewBag.Error</h5>
            }

            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <fieldset>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-7">
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBox("RememberMe")
                                        Remember me
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-7">
                                <input type="submit" value="Login" class="btn btn-primary" />
                                @Html.ActionLink("Forget Password?", "ForgetPassword", "User")
                            </div>
                        </div>
                    </fieldset>
                </div>
            }
        </div>
    </div>

</div>

