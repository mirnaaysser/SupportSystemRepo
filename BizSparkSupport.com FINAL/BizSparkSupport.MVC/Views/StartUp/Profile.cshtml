@model BizSparkSupport.MVC.ViewModels.RegisterModel

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>

@using (Html.BeginForm("EditProfile", "StartUp"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-9">
                <h4>User</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserID)
                
                <div class="form-group">
                    <label>First Name</label>

                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    <label>Last Name</label>

                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    <label>Email</label>

                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label>Mobile</label>

                    @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    <label>Company Name</label>

                    @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })

                </div>


                <div class="form-group">
                    <label>Company Phone</label>

                    @Html.EditorFor(model => model.CompanyNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-9">

                        <a href="@Url.Action("Changepassword","StartUp")" class="btn btn-primary"><i class="icon-user-1"></i> Change Password</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <ul class="nav nav-pills nav-stacked col-md-3">
                <li><a href="@Url.Action("Dashboard", "Case")" data-toggle="tab">History</a></li>
                <li><a href=" @Url.Action("NewCase", "Case")" data-toggle="tab">New Case</a></li>
                <li class="active"><a href="#" data-toggle="tab">Account Settings</a></li>
            </ul>
        </div>
    </div>
}
