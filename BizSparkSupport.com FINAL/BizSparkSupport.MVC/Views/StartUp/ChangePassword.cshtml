@model BizSparkSupport.DAL.User

@{
    ViewBag.Title = "ResetPassword";
}

<div class="container">
    <div class="page-section">
        <div class="row">
            <div class="col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2">
                <h4 class="page-section-heading">Reset Password</h4>
                <div class="panel panel-default">
                    <div class="panel-body">
                        @* <form class="form-horizontal" role="form"> *@
                        @using (Html.BeginForm("ChangePassword", "StartUp", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.HiddenFor(m => m.Password, new { id = "password" })
                            @Html.HiddenFor(m => m.UserID)
                            <center>
                                <label for="inputEmail3" style="color:crimson">
                                    @{  @Session["PasswordError"].ToString(); }
                                </label>
                            </center>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-3 control-label">Old Password</label>
                                <div class="col-sm-6">
                                    <div class="form-control-material">
                                        @*<input type="email" class="form-control" id="inputEmail3" placeholder="Type here..">*@
                                        @Html.TextBox("OldPassword", null, new { type = "password", @class = "form-control", id = "passwordConfirmation", placeholder = "Password Confirmation", required = "required" })
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="inputEmail3" id=""></label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-3 control-label">New Password</label>
                                <div class="col-sm-6">
                                    <div class="form-control-material">
                                        @Html.TextBox("NewPassword", null, new { type = "password", @class = "form-control", placeholder = "New Password", id = "newpassword", required = "required" })
                                        @* <input type="email" class="form-control" id="inputEmail3" placeholder="Type here..">*@
                                        <label for="inputEmail3"></label>
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="inputEmail3" id="errMsg"></label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-3 control-label">Confirm new Password</label>
                                <div class="col-sm-6">
                                    <div class="form-control-material">
                                        @Html.TextBox("PasswordConfirmation", null, new { type = "password", @class = "form-control", placeholder = "Confirm new Password", id = "Confirmnewpassword", required = "required" })
                                        @* <input type="email" class="form-control" id="inputEmail3" placeholder="Type here..">*@
                                        <label for="inputEmail3"></label>
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="inputEmail3" id="spnMsg"></label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group margin-none">
                                <div class="col-md-offset-2 col-md-10">

                                    <button type="submit" class="btn btn-primary paper-shadow relative" data-z="0.5" data-hover-z="1" data-animated id="btnSubmit">Save Changes</button>
                                </div>
                            </div>
                                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {

        $("#NewPassword").change(function () {

            var confirmPassword = $("#NewPassword").val().trim();
            // var re = new RegExp("^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$");
            if (/^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$/.test(confirmPassword) == true) {
                $("#errMsg").html("");
                $("#btnSubmit").prop('disabled', false);
            }
            else {
                $("#errMsg").html("Minimum 8 characters at least 1 Alphabet and 1 Number");
                $("#btnSubmit").prop('disabled', true);
            }

        });
    });
</script>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {

        $("#Confirmnewpassword").change(function () {

            var confirmPassword = $("#Confirmnewpassword").val().trim();
            var password = $("#newpassword").val().trim();
            if (password != confirmPassword) {
                $("#spnMsg").html("Passwords do not match.");
                $("#btnSubmit").prop('disabled', true);
                //return false;
            }
            else {
                $("#spnMsg").html('');
                $("#btnSubmit").prop('disabled', false);
                // return true;
            }
        });
    });
</script>

