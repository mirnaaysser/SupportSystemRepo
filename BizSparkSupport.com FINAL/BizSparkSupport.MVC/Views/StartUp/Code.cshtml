@model  BizSparkSupport.DAL.Code

@{
    ViewBag.Title = "login";
}

<div class="container" style="margin-top: 20px;">

    <div class="row">
        <div class="alert alert-info">
            <div><h5>If you already have a code, redeem it. If not request a new one ! </h5></div>
        </div>
        <div class="col-md-6">
            @using (Html.BeginForm("CodeChecker", "StartUp", FormMethod.Post))
            {
                //this is for create form tag
                @Html.AntiForgeryToken()
                if (@ViewBag.Message != null)
                {
                    <div style="border:1px solid red; margin: 20px; padding: 10px;">
                        @ViewBag.Message
                    </div>
                }


                <div class="form-horizontal">
                    <fieldset>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label("Code", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(a => a.CodeValue, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-7">
                                <a class="btn btn-success" data-toggle="modal" data-target=".bootstrapmodal"> Request Code </a>
                                <input type="submit" class="btn btn-primary" value="Next" style="margin-right: 10px;" />
                            </div>
                        </div>
                    </fieldset>
                </div>


                    @*<table>
                            <tr>
                                <div class="form-group">
                                    <td><label>Enter the code here</label></td>
                                    <td>@Html.TextBoxFor(a => a.CodeValue, new { htmlAttributes = new { @class = "form-control" } })</td>
                                    <td>@Html.ValidationMessageFor(a => a.CodeValue)</td>
                                </div>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <a class="btn btn-success" data-toggle="modal" data-target=".bootstrapmodal"> Request Code </a>
                                    <input type="submit" class="btn btn-primary" value="Next" style="float:right" />
                                </td>
                                <td></td>
                            </tr>
                        </table>*@
            }
            <div class="modal fade bootstrapmodal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">
                                &times;
                            </button>
                            <h4 class="modal-title">Requested email</h4>
                        </div>
                        <div class="modal-body">
                            @using (Html.BeginForm("RequestCode", "StartUp"))
                            {
                                <div class="form-group">
                                    <label for="inputUserName">Email</label>

                                    @Html.TextBox("Email", null, new { @class = "form-control", @type = "email" })

                                </div>

                                    <button type="submit" class="btn btn-default" style="float:right">Request</button>
                            }
                        </div>
                        <div class="modal-footer">


                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
