
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top:20px;">
    <h2>Forget Password</h2>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("ForgetPassword", "Login", FormMethod.Post, new { area = "Admin" }))
            {
                @Html.AntiForgeryToken()
                
                <div style="padding:20px;">Please enter your Email Address and you will receive an Email shortly.</div>
                <div class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-7">
                                @Html.Editor("email", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-7">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </div>
                    </fieldset>
                </div>
            }
            @if (ViewBag.ErrorMessage != null)
            {
                <h5 class="text-danger"> @ViewBag.ErrorMessage </h5>
            }
        </div>
    </div>
</div>