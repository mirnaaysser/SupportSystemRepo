@model BizSparkSupport.MVC.Areas.Admin.ViewModels.MessagesVM

@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h2>Messages</h2>
    <div class="row">
        <div class="col-md-6" style="border-right: thick solid #000000;">
            @Html.Partial("CategoryAdminMessageList", Model.Messages)
        </div>
        <div class="col-md-6">
            <div id="CurrentMessageDiv">
                @if (Model.CurrentMessage != null)
                {
                    @Html.Partial("CategoryAdminShowMessage", Model.CurrentMessage)
                }
                else
                {
                    <h4> No Message to Show</h4>
                }
            </div>
        </div>
    </div>
</div>